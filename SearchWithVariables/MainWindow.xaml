<Window x:Class="SearchWithVariables.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        FontSize="16"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Title="Поиск с переменными" MinHeight="300" MinWidth="640">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*" MinWidth="200"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="0.6*" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Name="Data" HorizontalAlignment="Stretch" IsReadOnly="True"></TextBox>
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></GridSplitter>
        <TextBox Grid.Column="2" Name="Result" HorizontalAlignment="Stretch" IsReadOnly="True"></TextBox>
    </Grid>
</Window>
